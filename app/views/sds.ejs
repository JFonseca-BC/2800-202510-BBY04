<!DOCTYPE html>
<html lang="en">

<head>
    <title>VestAbode</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Linked libraries Library -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">

    <!-- Other libraries and styles -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/public/styles/style.css">

</head>

<body>
    <nav id="navbarPlaceholder"></nav>
    <div class="container mx-auto p-3 d-flex flex-column align-items-center bg-white shadow" style="width: 70%; min-height: 100vh">
        <h1 class="mx-auto p-2 d-flex justify-content-center"><strong>Safety Data Sheets</strong></h1>
        <div class="w-75">
            <div class="d-none d-lg-flex justify-content-center flex-row flex-wrap align-items-center text-center my-3 w-100" id="letter-grouping-container" role="group">
                <% letterGroups.forEach((letter)=> { %>
                    <a href="#<%= letter %>" class="btn btn-outline-secondary col shadow-sm" style="margin: 2px;">
                        <%= letter %>
                    </a>
                <% }); %>
            </div>
            <div class="d-lg-none my-3 text-center">
                <div class="dropdown-center">
                    <button class="btn btn-outline-primary fw-bolder dropdown-toggle shadow-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">Sections</button>
                    <ul class="dropdown-menu overflow-y-scroll" style="height: 20vh;">
                        <% letterGroups.forEach((letter)=> { %>
                            <li>
                                <a href="#<%= letter %>" class="dropdown-item fw-bolder text-center">
                                    <%= letter %>
                                </a>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
            <div class="input-group rounded my-3 mb-4 shadow-sm">
                <label for="sds-search" id="search-addon" class="input-group-text"><i class="material-icons">search</i></label>
                <input class="form-control" type="search" placeholder="Search" aria-label=".form-control-lg example" id="sds-search" aria-label="Search" aria-describedby="search-addon">
            </div>
        </div>

        <div id="chemical-links-container" class="w-75 text-center">
            <% letterGroups.forEach((letter)=> { %>
                <div class="card my-3">
                    <div class="card-body mx-5" >
                        <h2 class="card-title" id="<%= letter %>">
                            <%= letter %>
                        </h2>
                        <div class="chemical-list list-group list-group-flush">
                            <% chemicalNames.sort().forEach((chemical)=> { %>
                                <% if(chemical.substance_name.charAt(0)==letter) { %>
                                    <a href="/sds/<%= chemical.substance_name %>" class="list-group-item list-group-item-action">
                                        <%= chemical.substance_name %>
                                    </a>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <nav id="footerPlaceholder"></nav>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.min.js" integrity="sha384-RuyvpeZCxMJCqVUGFI0Do1mQrods/hhxYlcVfGPOfQtPJh0JCw12tUAZ/Mv10S7D" crossorigin="anonymous"></script>
    <script src="/public/scripts/templateLoader.js"></script>
    <script src="/public/scripts/sdsSearch.js"></script>
</body>

</html>